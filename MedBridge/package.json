{
  "name": "medbridge",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --filter @medbridge/web dev",
    "build": "pnpm --filter @medbridge/web build",
    "dev:api": "pnpm --filter @medbridge/api start:dev",
    "build:api": "pnpm --filter @medbridge/api build",
    "dev:legacy:web": "pnpm --filter @medbridge/web-vite dev",
    "dev:legacy:api": "pnpm --filter @medbridge/api-fastify dev",
    "lint": "pnpm --filter @medbridge/web lint && pnpm --filter @medbridge/api lint"
  }
}
